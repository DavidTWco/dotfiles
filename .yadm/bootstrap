#!/bin/bash

# Navigate to root of yadm repository.
cd "$HOME"

# Set up submodules.
echo ":: Initialize submodules..."
yadm submodule update --recursive --init

# Adjust file permissions.
chmod +x ~/.config/rfc/rfc

# Make our symlinks.
echo ":: Creating symlinks..."
mkdir -p ~/.vim/autoload
ln -s ~/.config/vim-plug/plug.vim ~/.vim/autoload/plug.vim
mkdir -p ~/.weechat/lua/autoload
ln -s ~/.config/weechat-matrix-protocol-script/matrix.lua ~/.weechat/lua/matrix.lua
ln -s ~/.weechat/lua/matrix.lua ~/.weechat/lua/autoload/matrix.lua
ln -s ~/.config/rfc/rfc ~/.local/bin/rfc

# Make other directories.
mkdir -p ~/.go

# Create .Xdefaults
ln -s ~/.Xresources ~/.Xdefaults

# Making yadm cache directories.
echo ":: Creating directories for fasd..."
mkdir -p ~/.zsh/cache/fasd-init-cache
mkdir -p ~/.fasd-init-bash

# Making Vim backup directories.
echo ":: Creating directories for Vim..."
mkdir -p ~/.vim/backup
mkdir -p ~/.vim/undo

# Install vim-plug plugins.
if command -v vim >/dev/null 2>&1; then
	echo ":: Install Vim plugins..."
	vim '+PlugInstall' '+qall'
fi

# Install tpm plugins.
echo ":: Install tmux plugins..."
$HOME/.tmux/plugins/tpm/bin/install_plugins

# Reload the bash configuration.
echo ":: Reloading .bashrc"
source "$HOME/.bashrc"

# Install Antibody for zsh.
if which brew >/dev/null 2>&1; then
	brew install getantibody/tap/antibody || brew upgrade antibody
else
	curl -sL https://git.io/antibody | sh -s
fi

# Update and install plugins.
antibody bundle < "$HOME/.antibody_bundle" > "$HOME/.zsh_plugins.sh"
antibody update

# Print a small notice.
echo ":: For Vim's YouCompleteMe plugin, you can browse to ~/.vim/plugged/YouCompleteMe and re-run ./install.py with extra flags to enable more languages."
